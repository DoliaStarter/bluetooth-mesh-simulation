<MainWindow>:
    GridLayout:
        cols:2
        TabbedPanel:
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_default_tab: False
            TabbedPanelItem:
                text: 'tab1'
                Label:
                    text: 'place for map'
            TabbedPanelItem:
                text: 'tab2'
                Label:
                    text: '??? place for house ???'
        Label:
            size_hint_x: .35
            text: 'config'



<WelcomeWindow>:
    name: "welcome"

    FloatLayout:
        cols:1

        Label:
            text: "Welcome to application!\n To start simulation upload map"
            pos_hint:{"center_x":0.5,"center_y":0.6}

        PathButton:
            pos_hint:{"center_x":0.5,"center_y":0.4}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "upload map"
            on_press: label.text = self.get_path()

        Button:
            pos_hint:{"center_x":0.5,"center_y":0.2}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "next screen"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "down"
