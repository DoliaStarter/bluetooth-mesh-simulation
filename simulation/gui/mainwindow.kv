#:include simulation/gui/widgets/welcome_panel.kv
<MainWindow>:
    config_panel: config_panel
    map_area: map_area
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: .3
            orientation: 'vertical'
            Button:
                size_hint_y: None
                height: dp(75)
                text: 'Upload map'
                on_release: app.open_chooser()
            BoxLayout:
                id: config_panel
                orientation: "vertical"
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                id: map_area
            
        
        
        
