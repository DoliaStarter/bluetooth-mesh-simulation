#:kivy 1.11.1

<FileChooser>:
    map_spinner: map_spinner

    title: 'Choose map'
    size_hint: 0.5, 0.5
    separator_color: 0.9, 0.9, 0.9, 1
    title: "Select map"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Select map from dropdown.'
        Label:
        Spinner:
            id: map_spinner
        Label:
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Upload'
                on_press: root.upload_file()
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            