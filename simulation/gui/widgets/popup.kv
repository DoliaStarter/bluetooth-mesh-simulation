#:kivy 1.11.1

<ConfPopup>:
    size_hint: 0.5, 0.5
    separator_color: 0.9, 0.9, 0.9, 1
    title: "Configure your device"
    device_label: current_device
    publishing: publishing.text 
    subcribed: subcribed.text
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: current_device
            text: ''
        GridLayout:
            cols: 2
            rows: 2
            TextInput:
                id: publishing
                hint_text: 'Publishing id:'
            TextInput:
                id: subcribed
                hint_text: 'Subscribed topic id:'
            Button:
                text: 'Save'
                on_press: root.add_new_elem()
            Button:
                text: 'Cancel'
                on_release: root.dismiss()








