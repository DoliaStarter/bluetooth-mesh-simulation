#:kivy 1.11.1

<ConfPopup>:
    size_hint: 0.5, 0.5
    separator_color: 0.9, 0.9, 0.9, 1
    title: "Configure your device"
    box_for_id: box_for_id
    publishing_id: publishing_id
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    id: box_for_id
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
            BoxLayout:
                pos_hint: {'top': 1}
                size_hint_y: None
                height: self.minimum_height
                TextInput:
                    id: publishing_id
                    size_hint_y: None
                    height: dp(45)
                    multiline: False
                    hint_text: 'Published id:'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Save'
                on_press: root.add_new_elem()


<SubId>:
    size_hint_y: None
    height: dp(45)
    hint_text: 'Subscribed id:'
    multiline: False
    on_text_validate: self.add_id_to_pop()





