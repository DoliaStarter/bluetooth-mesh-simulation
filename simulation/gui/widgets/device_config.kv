#:kivy 1.11.1

<DeviceConfigWindow>:
    container: myBox
    BoxLayout:
        id: myBox
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height


<DeviceRow>:
    devices: devices
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(75)
    open_conf: open_conf
    Spinner:
        id: devices
        size_hint_y: None
        text: 'Devices'
        height: dp(75)
        #on_text: root.parent.newElem()
    Button:
        id: open_conf
        size_hint_y: None
        height: dp(75)
        text: "Configure"
    Button:
        size_hint_y: None
        height: dp(75)
        text: "Delete"
